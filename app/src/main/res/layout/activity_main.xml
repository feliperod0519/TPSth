<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/Black"
    android:orientation="vertical" >
    
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="155dp"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/editText2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.68"
            android:inputType="textMultiLine"
            android:gravity="left"
            android:textColor="@color/White" >
         </EditText>
        <EditText
            android:id="@+id/editText1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:cursorVisible="false"
            android:ems="10"
            android:gravity="right"
            android:textColor="@color/White">
            <requestFocus /> 
        </EditText>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/button7"
                    style="@style/ButtonText_number_pad"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:onClick="onClickListener7"
                    android:text="7"
                    android:textColor="@color/White" />

                <Button
                    android:id="@+id/button8"
                    style="@style/ButtonText_number_pad"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:onClick="onClickListener8"
                    android:text="8"
                    android:textColor="@color/White" />

                <Button
                    android:id="@+id/button9"
                    style="@style/ButtonText_number_pad"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.00"
                    android:onClick="onClickListener9"
                    android:text="9"
                    android:textColor="@color/White" />

                <Button
                    android:id="@+id/buttonDivide"
                    style="@style/ButtonText"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.00"
                    android:onClick="onClickListenerDivide"
                    android:text="/"
                    android:textColor="@color/White" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/linearLayout1"
                android:layout_below="@+id/linearLayout1" >

                <Button
                    android:id="@+id/button4"
                    style="@style/ButtonText_number_pad"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:onClick="onClickListener4"
                    android:text="4"
                    android:textColor="@color/White" />

                <Button
                    android:id="@+id/button5"
                    style="@style/ButtonText_number_pad"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:onClick="onClickListener5"
                    android:text="5"
                    android:textColor="@color/White" />

                <Button
                    android:id="@+id/button6"
                    style="@style/ButtonText_number_pad"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.00"
                    android:onClick="onClickListener6"
                    android:text="6"
                    android:textColor="@color/White" />

                <Button
                    android:id="@+id/buttonMultiply"
                    style="@style/ButtonText"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.00"
                    android:onClick="onClickListenerMultiply"
                    android:text="*"
                    android:textColor="@color/White" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/linearLayout5"
                android:layout_below="@+id/linearLayout5"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/button1"
                    style="@style/ButtonText_number_pad"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:onClick="onClickListener1"
                    android:text="1"
                    android:textColor="@color/White" />

                <Button
                    android:id="@+id/button2"
                    style="@style/ButtonText_number_pad"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:onClick="onClickListener2"
                    android:text="2"
                    android:textColor="@color/White" />

                <Button
                    android:id="@+id/button3"
                    style="@style/ButtonText_number_pad"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:onClick="onClickListener3"
                    android:text="3"
                    android:textColor="@color/White" />

                <Button
                    android:id="@+id/buttonMinus"
                    style="@style/ButtonText"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.00"
                    android:onClick="onClickListenerMinus"
                    android:text="-"
                    android:textColor="@color/White" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/button0"
                    style="@style/ButtonText_number_pad"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:onClick="onClickListener0"
                    android:text="0"
                    android:textColor="@color/White" />

                <Button
                    android:id="@+id/buttonPoint"
                    style="@style/ButtonText_number_pad"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:onClick="onClickListenerPoint"
                    android:text="."
                    android:textColor="@color/White" />

                <Button
                    android:id="@+id/buttonEqual"
                    style="@style/ButtonText_number_pad"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:onClick="onClickListenerEqual"
                    android:text="="
                    android:textColor="@color/White" />

                <Button
                    android:id="@+id/buttonPlus"
                    style="@style/ButtonText"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:onClick="onClickListenerPlus"
                    android:text="+"
                    android:textColor="@color/White"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout6"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/buttonFn"
                    style="@style/ButtonText"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:onClick="onClickListenerFnc"
                    android:text="Fn"
                    android:textColor="@color/White" />

                <Button
                    android:id="@+id/buttonNeg"
                    style="@style/ButtonText"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:onClick="onClickListenerNeg"
                    android:text="(-)"
                    android:textColor="@color/White" />

                <Button
                    android:id="@+id/buttonReset"
                    style="@style/ButtonText"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:onClick="onClickListenerReset"
                    android:text="C"
                    android:textColor="@color/White" />

                <Button
                    android:id="@+id/buttonModulo"
                    style="@style/ButtonText"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:onClick="onClickListenerModulo"
                    android:text="%"
                    android:textColor="@color/White"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutTrigo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/buttonSin"
                    style="@style/ButtonText"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:onClick="onClickListenerSin"
                    android:text="Sin"
                    android:textColor="@color/White" />

                <Button
                    android:id="@+id/buttonCos"
                    style="@style/ButtonText"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:onClick="onClickListenerCos"
                    android:text="Cos"
                    android:textColor="@color/White" />

                <Button
                    android:id="@+id/buttonTang"
                    style="@style/ButtonText"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:onClick="onClickListenerTan"
                    android:text="Tan"
                    android:textColor="@color/White" />

                <Button
                    android:id="@+id/buttonFactorial"
                    style="@style/ButtonText"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:onClick="onClickListenerFactorial"
                    android:text="!"
                    android:textColor="@color/White" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutLog"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/buttonLog"
                    style="@style/ButtonText"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:onClick="onClickListenerLog"
                    android:text="Ln"
                    android:textColor="@color/White" />

                <Button
                    android:id="@+id/buttonLog10"
                    style="@style/ButtonText"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:onClick="onClickListenerLog10"
                    android:text="Log"
                    android:textColor="@color/White" />

                <Button
                    android:id="@+id/buttonOpenParenthese"
                    style="@style/ButtonText"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:onClick="onClickListenerOpenParenthese"
                    android:text="@string/open_parenth"
                    android:textColor="@color/White" />

                <Button
                    android:id="@+id/buttonCloseParenthese"
                    style="@style/ButtonText"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:onClick="onClickListenerCloseParenthese"
                    android:text="@string/close_parenth"
                    android:textColor="@color/White" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutHist"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/buttonVariableX"
                    style="@style/ButtonText"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:onClick="onClickListenerVariableX"
                    android:text="x"
                    android:textColor="@color/White" />

                <Button
                    android:id="@+id/buttonGraph"
                    style="@style/ButtonText"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:onClick="onClickListenerGraph"
                    android:text="Graph"
                    android:textColor="@color/White" />

                <Button
                    android:id="@+id/buttonShowHistory"
                    style="@style/ButtonText"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:onClick="onClickListenerShowHistory"
                    android:text="Hist"
                    android:textColor="@color/White" />

                <Button
                    android:id="@+id/buttonClearHistory"
                    style="@style/ButtonText"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:onClick="onClickListenerClearHistory"
                    android:text="Eff.H."
                    android:textColor="@color/White" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutConst"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/buttonExp"
                    style="@style/ButtonText"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:onClick="onClickListenerExp"
                    android:text="^"
                    android:textColor="@color/White" />

                <Button
                    android:id="@+id/buttonPI"
                    style="@style/ButtonText"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:onClick="onClickListenerPi"
                    android:text="Ï€"
                    android:textColor="@color/White" />

                <Button
                    android:id="@+id/buttonE"
                    style="@style/ButtonText"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:onClick="onClickListenerConstE"
                    android:text="e"
                    android:textColor="@color/White" />


            </LinearLayout>


        </LinearLayout>


    </ScrollView>


</LinearLayout>